{
  "private": true,
  "scripts": {
    "start": "yarn build:convert && yarn --cwd packages/app start",
    "build": "yarn build:convert && yarn build:app",
    "build:app": "yarn --cwd packages/app build",
    "build:convert": "yarn --cwd packages/convert build"
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true,
    "jsxBracketSameLine": false,
    "trailingComma": "none",
    "semi": false,
    "printWidth": 80
  }
}
